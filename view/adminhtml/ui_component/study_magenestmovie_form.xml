<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">study_magenestmovie_form.study_magenestmovie_listing_data_source</item>
            <item name="deps" xsi:type="string">study_magenestmovie_form.study_magenestmovie_listing_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Movie Information</item>
        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">study_magenestmovie_form</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>

    </argument>
    <settings>
        <buttons>
            <button name="save" class="Magenest\Study\Block\Adminhtml\Edit\SaveButton"/>
            <button name="back">
                <url path="*/*/" />
                <class>back</class>
                <label translate="true">Back</label>
            </button>
        </buttons>
        <namespace>study_magenestmovie_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>study_magenestmovie_form.study_magenestmovie_listing_data_source</dep>
        </deps>
    </settings>
    <dataSource name="study_magenestmovie_listing_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="study/magenestmovie/save" />
        </settings>
        <dataProvider class="Magenest\Study\Model\ResourceModel\MagenestMovie\DataProvider" name="study_magenestmovie_listing_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>movie_id</primaryFieldName>
            </settings>
        </dataProvider>

    </dataSource>
    <fieldset name="movie_details">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string" translate="true">Movie Details</item>
                <item name="sortOrder" xsi:type="number">20</item>
            </item>
        </argument>

        <field name="name">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Name</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">movie_details</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="description">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Description</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">movie_details</item>
                </item>
            </argument>
        </field>
        <field name="rating">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Rating</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">movie_details</item>
                    <item name="validation" xsi:type="array">
                        <item name="greater-than-equals-to" xsi:type="number">0</item>
                        <item name="less-than-equals-to" xsi:type="number">10</item>
                        <item name="validate-integer" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>

        <field name="director_id">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Magenest\Study\Model\Config\Source\SelectDirector</item>
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Director</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="source" xsi:type="string">movie_details</item>
                    <item name="caption" xsi:type="string" translate="true">-- Please Select --</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
    </fieldset>
</form>